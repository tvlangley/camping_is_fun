<h1>create a camper</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p>Error: <%= error %></p>
    <% end%>
<% end%>

<%= form_for @camper do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :age %>
    <%= f.text_field :age %>

    <%= f.submit %>
<% end %>